<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mohazi.mapper.MyPageMapper">

   <!-- List 페이징 처리  -->
   <!-- paging에 나오는 데이터 - p_no: 글번호, title : 제목, id :유저 아이디 -->
   <select id="getListWithPaging" resultType="com.mohazi.domain.PartyVO">
      <![CDATA[
         SELECT
             P_NO, TITLE , id
         FROM
             (
             SELECT /*+INDEX_DESC(PARTY IDX_PARTY) */
                ROWNUM RN, P_NO, TITLE , id
             FROM
                PARTY
             WHERE id =#{id}
      ]]>
        
         <![CDATA[ 
         		and 
                 rownum<=#{pageNum} * #{amount} and
                  TYPE=#{type}
             )
         where rn > (#{pageNum}-1) * #{amount} 
        ]]>
   </select>
   <!-- 아이디로 등록한 글을 타입별로 불러와 몇개의 글이 있는지 count 갯수로 환산 -->
   <select id="getTotalCount" resultType="int">
      Select Count(*) From Party Where p_no > 0 and TYPE=#{type} and id= #{id}
   </select>

   <!-- 소모임 목록 -->
     <select id="getList" resultType="com.mohazi.domain.PartyVO" parameterType="com.mohazi.domain.PartyVO">
      SELECT * FROM PARTY
      WHERE TYPE=#{type} and ID = #{id}

   </select>

 
   <!-- DELETE 해당 게시글 삭제 -->
   <delete id="delete">
      DELETE FROM PARTY
      WHERE P_NO = #{p_no}
   </delete>
   
</mapper>